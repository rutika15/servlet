<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>MyController</servlet-name>
  	<display-name>MyController</display-name>
  	<description></description>
  	<servlet-class>com.example.model.MyController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>products_view</servlet-name>
  	<display-name>products_view</display-name>
  	<description></description>
  	<servlet-class>com.example.model.products_view</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>MyController</servlet-name>
  	<url-pattern>/controller.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>products_view</servlet-name>
  	<url-pattern>/products_view.view</url-pattern>
  </servlet-mapping>
  
</web-app>
